<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hiepjeanshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HiepJeanShop">
        <activity
            android:name=".Acitivity.Cart.CartActivity"
            android:label="@string/title_activity_card"
            android:theme="@style/Theme.HiepJeanShop.NoActionBar"></activity>
        <activity
            android:name=".Acitivity.ui.shopping.ChildProductActivity"
            android:label="@string/title_activity_child_product"
            android:theme="@style/Theme.HiepJeanShop.NoActionBar" />
        <activity android:name=".Acitivity.Accout.SignActivity" />
        <activity android:name=".Acitivity.Accout.LoginActivity" />
        <activity
            android:name=".Acitivity.MainActivity"
            android:label="@string/title_activity_main"
            />
        <activity android:name=".HelloActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>